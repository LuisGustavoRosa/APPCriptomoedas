<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/space">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="144dp"
        android:layout_height="70dp"
        android:fontFamily="@font/baloo_chettan"
        android:text="Ativos"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/white"
        android:textSize="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="29dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="210dp"
        android:layout_height="44dp"

        android:layout_marginBottom="260dp"
        android:background="@drawable/custom_buttom"
        android:fontFamily="@font/baloo_chettan"
        android:text="CONFIRMAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="405dp"
        android:layout_height="44dp"
        android:layout_marginTop="84dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="3dp">

        <ImageView
            android:id="@+id/moeda"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/ic_moeda"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/view_valor"
            android:layout_width="315dp"
            android:layout_height="45dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/roboto"
            android:hint="VALOR"
            android:textColor="#E31B1B"
            android:textColorHint="@color/white"
            tools:ignore="MissingConstraints"
            tools:visibility="visible" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="405dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="3dp">

        <ImageView
            android:id="@+id/quatidade"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/ic_quant"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/view_quantidade"
            android:layout_width="315dp"
            android:layout_height="45dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/roboto"
            android:hint="QUANTIDADE NA MOEDA"
            android:textColor="#E31B1B"
            android:textColorHint="@color/white"
            tools:ignore="MissingConstraints"
            tools:visibility="visible" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="405dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="3dp">

        <ImageView
            android:id="@+id/data"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/ic_data"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/view_data"
            android:layout_width="315dp"
            android:layout_height="45dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/roboto"
            android:hint="DATA"
            android:textColor="#E31B1B"
            android:textColorHint="@color/white"
            tools:ignore="MissingConstraints"
            tools:visibility="visible" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>